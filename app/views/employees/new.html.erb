<h1>New Employee</h1>

<!-- Check if the instance of pet we are attempting to create or update has any validation errors. -->
<% if @employee.errors.full_messages.length > 0 %>
  <!-- Iterate through the full messages of each error attached to the instance of pet and create a li for each one with the value of the error message injected into it. -->
  <h2><%= pluralize(@employee.errors.full_messages.length , "error") %> prohibited this employee from being created:</h2>
  <ul>
    <% @employee.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for(@employee) do |f| %>
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name %><br>

    <%= f.label :last_name %><br>
    <%= f.text_field :last_name %><br>

    <%= f.label :alias %><br>
    <%= f.text_field :alias %><br>

    <%= f.label :title %><br>
    <%= f.text_field :title %><br>
  
    <%= f.label :office %><br>
    <%= f.text_field :office %><br>

    <%= f.label :img_url %><br>
    <%= f.text_field :img_url %><br>

    <%= f.collection_select(:dog_id, Dog.all, :id, :name) %><br>

  <%= f.submit %>
<% end %>